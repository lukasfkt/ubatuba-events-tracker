{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "docker:db:up": "docker compose up -d",
    "docker:db:build": "docker compose up --build -d",
    "docker:db:down": "docker compose down",

    "docker:api:up": "docker compose -f apps/api/docker-compose.yml up -d",
    "docker:api:build": "docker compose -f apps/api/docker-compose.yml up --build -d",
    "docker:api:down": "docker compose -f apps/api/docker-compose.yml down",

    "web": "turbo run dev --filter=web",
    "web:test": "cd apps/web && pnpm run test",

    "full:install": "pnpm install && cd apps/api && poetry install"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
